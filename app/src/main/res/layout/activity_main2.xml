<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:text="Verify Your Phone Number"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="209dp"
        android:layout_height="157dp"
        android:layout_marginStart="102dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/topimg" />
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="295dp"
        android:layout_height="35dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="66dp"
        android:layout_marginRight="66dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/border_col"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">


        <EditText
            android:id="@+id/textView4"
            android:layout_width="59dp"
            android:layout_height="66dp"
            android:gravity="center"
            android:text="@string/ind_country_code"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button" />

        <EditText
            android:id="@+id/textView5"
            android:layout_width="149dp"
            android:layout_height="57dp"

            android:gravity="center|center_horizontal|left"
            android:text="@string/mob_num"
            android:textColor="@android:color/holo_red_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/button"
            app:layout_constraintVertical_bias="1.0" />


        <Button
            android:layout_width="30dp"
            android:layout_height="25dp"

            android:background="@drawable/edit" />



    </LinearLayout>








    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="416dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <EditText
            android:id="@+id/textView3"
            android:layout_width="54dp"
            android:layout_height="49dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/circle_code"
            android:gravity="center"
            android:text="9"
            tools:layout_editor_absoluteX="341dp"
            tools:layout_editor_absoluteY="448dp" />

        <EditText
            android:id="@+id/textView3"
            android:layout_width="54dp"
            android:layout_height="49dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/circle_code"
            android:gravity="center"
            android:text="9"
            tools:layout_editor_absoluteX="341dp"
            tools:layout_editor_absoluteY="448dp" />

        <EditText
            android:id="@+id/textView3"
            android:layout_width="54dp"
            android:layout_height="49dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/circle_code"
            android:gravity="center"
            android:text="9"
            tools:layout_editor_absoluteX="341dp"
            tools:layout_editor_absoluteY="448dp" />

        <EditText
            android:id="@+id/textView3"
            android:layout_width="54dp"
            android:layout_height="49dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/circle_code"
            android:gravity="center"
            android:text="9"
            tools:layout_editor_absoluteX="341dp"
            tools:layout_editor_absoluteY="448dp" />

        <EditText
            android:id="@+id/textView3"
            android:layout_width="54dp"
            android:layout_height="49dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/circle_code"
            android:gravity="center"
            android:text="9"
            tools:layout_editor_absoluteX="341dp"
            tools:layout_editor_absoluteY="448dp" />

        <EditText
            android:id="@+id/textView3"
            android:layout_width="54dp"
            android:layout_height="49dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/circle_code"
            android:gravity="center"
            android:text="9"
            tools:layout_editor_absoluteX="341dp"
            tools:layout_editor_absoluteY="448dp" />

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="278dp"
        android:layout_height="57dp"
        android:layout_marginStart="66dp"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="67dp"
        android:layout_marginRight="67dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded_button"
        android:text="Verify"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="181dp"
        android:layout_height="34dp"
        android:layout_marginStart="128dp"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="102dp"
        android:layout_marginRight="102dp"
        android:layout_marginBottom="73dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="105dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="Resend code in :"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button" />

        <EditText
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="66dp"

            android:gravity="center|center_horizontal|left"
            android:text="05.00"
            android:textColor="@android:color/holo_red_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/button"
            app:layout_constraintVertical_bias="1.0" />


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>